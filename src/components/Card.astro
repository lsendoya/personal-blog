---
export interface Props {
	title: string;
	desc: string;
	icon: string;
}

const { title, desc, icon } = Astro.props;
---

<div class="container">
	<img src={icon} alt={desc} />

	<h3 class="text title">
		{title}
	</h3>

	<p class="text paragraph">
		{desc}
	</p>
</div>

<style>
	.container {
		display: flex;
		position: relative;
		flex-direction: column;
		padding: 1.5rem 1.5rem;
		gap: 1rem;
		width: 17.5rem;
		height: auto;
		order: 0;

		border-radius: 2rem;
		background: linear-gradient(
			rgba(5, 24, 57, 0.859),
			rgba(15, 18, 23, 0.644),
			rgba(15, 18, 23, 0.644),
			rgba(34, 28, 46, 0.247)
		);
	}

	.text {
		font-family: 'Open Sans', sans-serif;
		color: #f7f7f7;
		font-style: normal;
		display: flex;
		align-items: center;
		text-align: center;
	}
	.paragraph {
		font-weight: 200;
		font-size: 1rem;
		line-height: 1.6rem;
		text-align: center;
	}
	.title {
		font-weight: 800;
		font-size: 1.5rem;
		line-height: 2rem;
		margin: 1rem 0;
		align-self: center;
	}

	img {
		width: 2rem;
		height: 2rem;
		position: absolute;
		top: 0.6rem;
		left: 0.6rem;
	}
	@media screen and (max-width: 768px) {
		.container {
			margin: 2rem 0;
			height: auto;
		}
	}

	@media screen and (min-width: 769px) and (max-width: 992px) {
		.container {
			margin: 0 1rem;
			padding: 1rem 0;
		}
		.title {
			padding-top: 0.5rem;
		}
	}
</style>
