---
import Nav from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<Head title={title} />
	<body>
		<div class="container">
			<Nav />
			<slot />
			<Footer />
		</div>
		<style>
			.container {
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				max-width: 1200px;
				height: auto;
				margin: 0 2rem;
			}
			body {
				background: linear-gradient(
					to bottom,
					rgb(1, 9, 23),
					rgb(10, 10, 10),
					rgb(0, 0, 0),
					rgb(8, 14, 23)
				);
			}

			@media screen and (max-width: 768px) {
				.container {
					width: 800px;
					align-items: center;
					justify-content: center;
				}
			}
		</style>
	</body>
</html>
